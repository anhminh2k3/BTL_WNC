

@model BTL_WNC.ViewModels.TaskViewModel

@{
    ViewData["Title"] = "Task";
}

<div class="container mt-5">
    <h1>@Model.Project.Name</h1>
    <p>@Model.Project.Decription</p>

    <div class="row">
        <div class="col-md-6">
            <h3>Doing</h3>
            @foreach (var task in Model.DoingTasks)
            {
                <div class="card">
                    <div class="card-header">@task.Title</div>
                    <div class="card-body">
                        <p class="card-text">@task.Content</p>
                        <p class="card-text"><strong>Due Date:</strong> @task.DueDate.ToString("dd MMM, yyyy")</p>
                    </div>
                    <div class="card-footer">
                        <ul>
                            @foreach (var user in Model.Users)
                            {
                                <li>@user.Name</li>
                            }
                        </ul>
                        @* <div class="task-status badge badge-info">Doing</div> *@
                    </div>
                </div>
            }
            <a href="@Url.Action("AddTask", "Task", new { projectId = Model.Project.Id, status = "Doing" })" class="btn btn-primary">+ Add New Task</a>

        </div>
        <div class="col-md-6">
            <h3>Done</h3>
            @foreach (var task in Model.DoneTasks)
            {
                <div class="card">
                    <div class="card-header">@task.Title</div>
                    <div class="card-body">
                        <p class="card-text">@task.Content</p>
                        <p class="card-text"><strong>Due Date:</strong> @task.DueDate.ToString("dd MMM, yyyy")</p>
                    </div>
                    <div class="card-footer">
                        <ul>
                            @foreach (var user in Model.Users)
                            {
                                <li>@user.Name</li>
                            }
                        </ul>
                        @* <div class="task-status badge badge-info">Done</div> *@
                    </div>
                </div>
            }
            <a href="@Url.Action("AddTask", "Task", new { projectId = Model.Project.Id, status = "Done" })" class="btn btn-primary">+ Add New Task</a>

        </div>
    </div>
</div>
