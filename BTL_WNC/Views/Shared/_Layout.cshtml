<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BTL_WNC</title>
    <style>
        .navbar-nav .nav-link {
            display: inline-block;
            transition: background-color 0.3s, color 0.3s;
            padding: 2px 5px;
            border-radius: 5px;
        }

            .navbar-nav .nav-link:hover {
                background-color: #ff6600; /* Change this color to your desired hover background color */
                color: white; /* Change this color to your desired hover text color */
            }

        .navbar-nav .nav-item {
            flex: 1;
            text-align: center;
        }

        .navbar-collapse {
            justify-content: space-between;
        }
    </style>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BTL_WNC.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                @* <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">BTL_WNC</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button> *@
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 justify-content-around">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Project" asp-action="ProjectView">Project</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="AllUser">AllUser</a>
                        </li>
                        <li class="nav-item">
                            <a id="logout-link" class="nav-link text-dark" href="#">LogOut</a>
                        </li>
                    </ul>
                    
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @* <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - BTL_WNC - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer> *@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        document.getElementById("logout-link").addEventListener("click", function (event) {
            event.preventDefault();
            var form = document.createElement("form");
            form.style.display = "none";
            form.method = "post";
            form.action = "/Access/Logout";
            document.body.appendChild(form);
            form.submit();
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
