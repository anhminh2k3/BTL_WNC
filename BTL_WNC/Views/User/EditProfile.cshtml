@model BTL_WNC.Models.User

@{
    ViewData["Title"] = "Edit Profile";
}

<h2>Edit Profile</h2>

<form asp-action="EditProfile" method="post">
    <input type="hidden" name="id" value="@Model.Id" />
    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" name="name" class="form-control" value="@Model.Name" />
        @if (ViewData.ModelState.ContainsKey("Name"))
        {
            <span class="text-danger">@ViewData.ModelState["Name"].Errors.First().ErrorMessage</span>
        }
    </div>
    <div class="form-group">
        <label for="email">Email</label>
        <input type="text" name="email" class="form-control" value="@Model.Email" />
        @if (ViewData.ModelState.ContainsKey("Email"))
        {
            <span class="text-danger">@ViewData.ModelState["Email"].Errors.First().ErrorMessage</span>
        }
    </div>
    <div class="form-group">
        <label for="phoneNumber">Phone Number</label>
        <input type="text" name="phoneNumber" class="form-control" value="@Model.PhoneNumber" />
        @if (ViewData.ModelState.ContainsKey("PhoneNumber"))
        {
            <span class="text-danger">@ViewData.ModelState["PhoneNumber"].Errors.First().ErrorMessage</span>
        }
    </div>
    <div class="form-group">
        <label for="password">Password</label>
        <input type="password" name="password" class="form-control" value="@Model.Password" />
        @if (ViewData.ModelState.ContainsKey("Password"))
        {
            <span class="text-danger">@ViewData.ModelState["Password"].Errors.First().ErrorMessage</span>
        }
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
        <a asp-action="Profile" asp-route-id="@Model.Id" class="btn btn-secondary">Cancel</a>
    </div>
</form>
